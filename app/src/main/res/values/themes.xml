<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HeroApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F5A623</item>
        <item name="colorPrimaryVariant">#F5A623</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ImageShape" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cornerSize">20dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="background">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">#E0E0E0</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerCut" parent="">
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerFamily">cut</item>
    </style>
</resources>
